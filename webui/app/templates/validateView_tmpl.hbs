<div class="row">
  <div id="cfmFrm" class="col-md-12">
    <h2>{{w.form.gwSetup.ver.titleH2}}</h2>
      <form>
          <div class="form-group">
              <label for="inputCode">{{w.form.gwSetup.ver.inputCode.label}}</label>
              <input type="number" name="code" class="form-control" id="inputCode" placeholder="12345">
              <span class="help-block">{{w.form.gwSetup.ver.inputCode.help-block}}</span>
          </div>
          <button class="btn btn-lg btn-primary" type="submit">{{w.form.gwSetup.ver.inputCode.confirmBtn}}</button>
