<div class="row">
  <div id="cfmFrm" class="col-md-12">
    <h2>{{w.valV.title}}</h2>
    <form>
        <div class="form-group">
            <label for="inputCode">{{w.valV.label}}</label>
            <input type="number" name="code" class="form-control" id="inputCode" placeholder="12345">
            <span class="help-block">{{w.valV.inst}}</span>
        </div>
        <button class="btn btn-lg btn-primary" type="submit">{{w.valV.btn}}</button>
    </form>
    <div class="alert alert-danger alert-dismissable fade">
        <button type="button" class="close" aria-hidden="true">&times;</button>
        <strong>{{w.basic.err}}</strong>&nbsp;{{w.valV.cause}}
    </div>
  </div>
</div>
