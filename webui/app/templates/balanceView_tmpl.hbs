<h2>{{s.balanceView.balH2}}</h2>
{{s.balanceView.bal}} <img style="vertical-align: text-top;" class="spin" src="{{resPath}}/images/loop.gif"/></span>.
<form>
    <div class="form-group">
	    <label for="amountInput">{{s.balanceView.amountLbl}}</label>
	    <input type="number" name="amount" step="0.00000001" min="0" class="form-control" id="amountInput" placeholder="{{s.balanceView.amountPh}}">
	</div>
	<div class="form-group">
	    <label for="addressInput">{{s.balanceView.addressLbl}}</label>
	    <input type="text" name="address" class="form-control" id="addressInput" placeholder="{{s.balanceView.addressPh}}">
	</div>
    <button class="btn btn-inverse" type="submit">{{s.balanceView.withdrawalBtn}}</button>
</form>
<div id="errorAlert" class="alert alert-danger alert-dismissable fade">
  <button type="button" class="close" aria-hidden="true">&times;</button>
  <strong>Error!</strong> {{s.balanceView.error}}
</div>
<div id="successAlert" class="alert alert-success alert-dismissable fade">
  <button type="button" class="close" aria-hidden="true">&times;</button>
  <strong>Success!</strong> {{s.balanceView.success}}
</div>