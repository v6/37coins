<h2>{{w.balanceView.balH2}}</h2>
{{w.balanceView.bal}} <img style="vertical-align: text-top;" class="spin" src="{{resPath}}/images/loop.gif"/></span>.
<form>
    <div class="form-group">
	    <label for="amountInput">{{w.balanceView.amountLbl}}</label>
	    <input type="number" name="amount" step="0.00000001" min="0" class="form-control" id="amountInput" placeholder="{{w.balanceView.amountPh}}">
	</div>
	<div class="form-group">
	    <label for="addressInput">{{w.balanceView.addressLbl}}</label>
	    <input type="text" name="address" class="form-control" id="addressInput" placeholder="{{w.balanceView.addressPh}}">
	</div>
    <button class="btn btn-inverse" type="submit">{{w.balanceView.withdrawalBtn}}</button>
</form>
<div id="errorAlert" class="alert alert-danger alert-dismissable fade">
  <button type="button" class="close" aria-hidden="true">&times;</button>
  <strong>Error!</strong> {{w.balanceView.error}}
</div>
<div id="successAlert" class="alert alert-success alert-dismissable fade">
  <button type="button" class="close" aria-hidden="true">&times;</button>
  <strong>Success!</strong> {{w.balanceView.success}}
</div>